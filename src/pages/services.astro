---
import Header from "../components/Header.tsx";
import "../styles/global.css";

const fiverrUrl = "https://www.fiverr.com/nksbro";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Services ‚Äî NKScreates</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cabin+Sketch:wght@400;700&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">

  <style>
    /* ================= THEME ================= */
    :root {
      --primary:#4aa3ff;
      --accent:#f1c40f;

      --bg:#f4f1ea;
      --card:#ffffff;
      --text:#1a1a1a;
      --border:#1a1a1a;
      --shadow:#00000020;

      --head:'Cabin Sketch',cursive;
      --body:'Space Mono',monospace;
    }

    [data-theme="dark"] {
      --bg:#0b0b0b;
      --card:#141414;
      --text:#f4f1ea;
      --border:#f4f1ea;
      --shadow:#00000080;
    }

    /* ================= BASE ================= */
    body{
      margin:0;
      font-family:var(--body);
      background:var(--bg);
      color:var(--text);
      transition:.3s;
      cursor:none;
    }
    @media (hover:none){ body{cursor:auto;} }

    h1,h2,h3{
      font-family:var(--head);
      letter-spacing:1px;
      margin:0;
    }

    /* ================= LAYOUT ================= */
    .container{
      max-width:900px;
      margin:auto;
      padding:8rem 1.5rem 4rem;
      text-align:center;
      position:relative;
      z-index:2;
    }

    /* ================= HERO ================= */
    .title{
      font-size:4rem;
      color:var(--primary);
      text-shadow:3px 3px 0 var(--accent);
    }

    .subtitle{
      max-width:620px;
      margin:1.5rem auto 3rem;
      font-size:1rem;
      opacity:.85;
    }

    /* ================= BUTTON ================= */
    .btn{
      display:inline-flex;
      align-items:center;
      gap:1rem;
      padding:1rem 3rem;
      background:var(--primary);
      color:#000;
      text-decoration:none;
      font-family:var(--head);
      font-size:1.5rem;
      border-radius:50px;
      border:2px solid var(--border);
      box-shadow:6px 6px 0 var(--accent);
      transition:.2s;
    }

    [data-theme="dark"] .btn{
      color:#000;
    }

    .btn:hover{
      transform:scale(1.05) rotate(-2deg);
      background:var(--accent);
    }

    /* ================= SERVICES ================= */
    .grid{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
      gap:2rem;
      margin:4rem 0;
    }

    .card{
      background:var(--card);
      border:2px solid var(--border);
      padding:2rem;
      border-radius:16px;
      transition:.2s;
      box-shadow:4px 4px 0 var(--shadow);
    }

    .card:hover{
      transform:translateY(-6px);
      box-shadow:8px 8px 0 var(--primary);
    }

    .icon{
      font-size:2.5rem;
      margin-bottom:.5rem;
    }

    .desc{
      font-size:.9rem;
      opacity:.85;
      margin-top:1rem;
      line-height:1.6;
    }

    .mini{
      display:inline-block;
      margin-top:1.2rem;
      font-size:.85rem;
      font-weight:bold;
      color:var(--primary);
      text-decoration:none;
    }

    /* ================= HOW IT WORKS ================= */
    .section{
      margin-top:5rem;
      border-top:3px dashed var(--border);
      padding-top:3rem;
    }

    .steps{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
      gap:2rem;
      margin-top:2rem;
    }

    .step{
      border:2px solid var(--border);
      padding:1.5rem;
      border-radius:20px;
      background:rgba(74,163,255,.08);
      text-align:left;
    }

    /* ================= NOTICE ================= */
    .notice{
      margin:4rem auto;
      padding:2rem;
      max-width:620px;
      border:3px solid var(--border);
      background:var(--card);
      box-shadow:6px 6px 0 var(--shadow);
    }

    /* ================= FOOTER ================= */
    .footer{
      font-size:.8rem;
      opacity:.6;
      font-style:italic;
      margin-top:2rem;
    }

    /* ================= CURSOR ================= */
    .cursor{
      position:fixed;
      width:20px;
      height:20px;
      border:2px solid var(--border);
      border-radius:50%;
      pointer-events:none;
      transform:translate(-50%,-50%);
      z-index:999;
    }
  </style>
</head>

<body >
  <div class="cursor" id="cursor"></div>

  <Header client:load />

  <main class="container">

    <h1 class="title">Creative Services</h1>
    <p class="subtitle">
      Animation, digital art & video editing ‚Äî  
      <strong>securely delivered via Fiverr only.</strong>
    </p>

    <a href={fiverrUrl} target="_blank" class="btn">Start on Fiverr ‚Üí</a>

    <div class="grid">
      <div class="card">
        <div class="icon">üé¨</div>
        <h3>2D Animation</h3>
        <p class="desc">
          Explainers, character motion, clean minimal style.
        </p>
        <a href={fiverrUrl} target="_blank" class="mini">View on Fiverr</a>
      </div>

      <div class="card">
        <div class="icon">üé®</div>
        <h3>Digital Art</h3>
        <p class="desc">
          Custom illustrations, thumbnails & posters.
        </p>
        <a href={fiverrUrl} target="_blank" class="mini">View on Fiverr</a>
      </div>

      <div class="card">
        <div class="icon">‚úÇÔ∏è</div>
        <h3>Video Editing</h3>
        <p class="desc">
          YouTube & short-form edits with clean pacing.
        </p>
        <a href={fiverrUrl} target="_blank" class="mini">View on Fiverr</a>
      </div>
    </div>

    <div class="section">
      <h2>How It Works</h2>
      <div class="steps">
        <div class="step">1Ô∏è‚É£ Choose a service on Fiverr</div>
        <div class="step">2Ô∏è‚É£ Secure payment (buyer protected)</div>
        <div class="step">3Ô∏è‚É£ Delivery + revisions</div>
      </div>
    </div>

    <div class="notice">
      üîí All projects are handled through <strong>Fiverr</strong> for secure payments,
      transparent pricing & buyer protection.
    </div>

    <a href={fiverrUrl} target="_blank" class="btn">Hire Me on Fiverr ‚Üí</a>

    <div class="footer">
      * You‚Äôll be redirected to fiverr.com/nksbro to place your order.
    </div>

  </main>

  <script is:inline>
    const cursor=document.getElementById("cursor");
    window.addEventListener("mousemove",e=>{
      cursor.style.left=e.clientX+"px";
      cursor.style.top=e.clientY+"px";
    });
  </script>
</body>
</html>
