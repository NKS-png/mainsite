---
import Header from '../components/Header.tsx';
import '../styles/global.css';

const pageTitle = "About Me - NKScreates";
const pageDescription = "Learn about Nikhil, the creator behind NKScreates - a digital artist, animator, and video editor passionate about bringing imagination to life.";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={pageDescription} />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		<meta property="og:type" content="website" />
		
		<style>
			.avatar-image {
				width: 100%;
				height: 100%;
				object-fit: cover;
				border-radius: 50%;
				border: 4px solid var(--primary);
				box-shadow: 0 10px 30px rgba(0,0,0,0.2);
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}
			
			.avatar-image:hover {
				transform: scale(1.05);
				box-shadow: 0 15px 40px rgba(0,0,0,0.3);
			}
			
			.wipp-link {
				color: var(--primary);
				text-decoration: none;
				font-weight: bold;
				position: relative;
				transition: color 0.3s ease;
			}
			
			.wipp-link:hover {
				color: var(--accent);
			}
			
			.wipp-link::after {
				content: '';
				position: absolute;
				width: 0;
				height: 2px;
				bottom: -2px;
				left: 0;
				background-color: var(--accent);
				transition: width 0.3s ease;
			}
			
			.wipp-link:hover::after {
				width: 100%;
			}
			
			/* Dark mode support */
			[data-theme="dark"] .avatar-image {
				border-color: var(--primary);
				box-shadow: 0 10px 30px rgba(0,0,0,0.5);
			}
			
			[data-theme="dark"] .avatar-image:hover {
				box-shadow: 0 15px 40px rgba(0,0,0,0.7);
			}
		</style>
	</head>
	<body>

		<!-- Loading Screen -->
		<!-- Header (shared component) -->
		<Header client:load />

		<!-- Main Content -->
		<main>

			<!-- Hero Section -->
			<section class="about-hero-section">
				<div class="section-container">
					<div class="about-hero-content">
						<div class="about-hero-text">
							<h1 class="about-hero-title">
								<span class="hero-line">About</span>
								<span class="hero-line">NKScreates</span>
							</h1>
							<p class="about-hero-subtitle">
								Get to know the artist behind the creations
							</p>
						</div>
						<div class="about-hero-visual">
							<div class="about-avatar">
								<img src="/pfp.jpg" alt="Nikhil - NKScreates Profile Picture" class="avatar-image" />
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- About Content -->
			<section class="about-content-section">
				<div class="section-container">
					<div class="about-content-grid">

						<!-- Introduction -->
						<div class="about-card intro-card">
							<div class="card-header">
								<h2>Who I Am</h2>
								<div class="card-accent"></div>
							</div>
							<div class="card-content">
								<p class="lead-text">
									Hi, I'm Nikhil â€” a passionate digital artist, animator, and video editor who believes in the power of visual storytelling.
								</p>
								<p>
									With years of experience in digital media, I specialize in creating compelling visuals that capture attention and convey messages effectively. Whether it's bringing characters to life through animation, crafting stunning digital artwork, or editing videos that tell stories, I approach each project with creativity, precision, and attention to detail.
								</p>
								<p>
									Beyond my creative work, I'm also the creator of <strong><a href="https://wipp.site" target="_blank" rel="noopener noreferrer" class="wipp-link">wipp.site</a></strong> â€” a platform designed to help creators showcase their work and connect with their audience in meaningful ways.
								</p>
								<p>
									My journey in digital art began with a simple curiosity about how technology could bring imagination to life. Today, I work with clients ranging from individual creators to small businesses, helping them transform their ideas into visual experiences that resonate with their audience.
								</p>
							</div>
						</div>

						<!-- Services -->
						<div class="about-card services-card">
							<div class="card-header">
								<h2>What I Do</h2>
								<div class="card-accent"></div>
							</div>
							<div class="card-content">
								<p class="lead-text">
									I offer comprehensive creative services to bring your vision to life:
								</p>
								<div class="services-list">
									<div class="service-item">
