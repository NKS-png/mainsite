---
// AdminDashboard.astro
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;

// Note: Ensure your /api/ routes are set up in Astro to handle these fetch requests.
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        <title>Admin Dashboard - NKScreates</title>
        <style is:global>
            /* --- DESIGN SYSTEM --- */
            :root {
                --primary: #0B79FF;
                --primary-hover: #0056CC;
                --accent: #F59E0B;
                
                --bg-body: #F9FAFB;
                --bg-card: #FFFFFF;
                --bg-hover: #F3F4F6;
                
                --text-main: #111827;
                --text-muted: #6B7280;
                
                --border: #E5E7EB;
                --radius: 12px;
                --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            }

            [data-theme="dark"] {
                --bg-body: #111827;
                --bg-card: #1F2937;
                --bg-hover: #374151;
                --text-main: #F9FAFB;
                --text-muted: #9CA3AF;
                --border: #374151;
            }

            /* --- RESET & BASE --- */
            * { box-sizing: border-box; margin: 0; padding: 0; }
            
            body {
                font-family: 'Inter', system-ui, sans-serif;
                background-color: var(--bg-body);
                color: var(--text-main);
                transition: background 0.3s, color 0.3s;
                min-height: 100vh;
            }

            /* --- LAYOUT UTILS --- */
            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 2rem;
            }

            .header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 3rem;
                flex-wrap: wrap;
                gap: 1rem;
            }

            .header-content h1 {
                font-size: 1.875rem;
                font-weight: 800;
                background: linear-gradient(135deg, var(--primary), var(--accent));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .btn {
                padding: 0.5rem 1rem;
                border-radius: 8px;
                font-weight: 500;
                cursor: pointer;
                border: none;
                transition: transform 0.1s;
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
                text-decoration: none;
                font-size: 0.875rem;
            }

            .btn:active { transform: scale(0.98); }
            
            .btn-primary { background: var(--primary); color: white; }
            .btn-outline { background: transparent; border: 1px solid var(--border); color: var(--text-main); }
            .btn-danger { background: #EF4444; color: white; }
            .btn-success { background: #10B981; color: white; }

            /* --- STATS GRID --- */
            .stats-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                gap: 1.5rem;
                margin-bottom: 3rem;
            }

            .stat-card {
                background: var(--bg-card);
                padding: 1.5rem;
                border-radius: var(--radius);
                border: 1px solid var(--border);
                box-shadow: var(--shadow);
                display: flex;
                align-items: center;
                gap: 1rem;
            }

            .stat-icon {
                width: 48px;
                height: 48px;
                border-radius: 10px;
                background: rgba(11, 121, 255, 0.1);
                color: var(--primary);
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .stat-info h3 { font-size: 2rem; font-weight: 700; line-height: 1; margin-bottom: 0.25rem; }
            .stat-info p { color: var(--text-muted); font-size: 0.875rem; }

            /* --- SECTIONS --- */
            .section {
                background: var(--bg-card);
                border-radius: var(--radius);
                border: 1px solid var(--border);
                padding: 1.5rem;
                margin-bottom: 2rem;
                box-shadow: var(--shadow);
            }

            .section-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1.5rem;
                padding-bottom: 1rem;
                border-bottom: 1px solid var(--border);
            }

            /* --- UPLOAD ZONE --- */
            .upload-zone {
                border: 2px dashed var(--border);
                border-radius: var(--radius);
                padding: 2rem;
                text-align: center;
                margin-bottom: 2rem;
                transition: border-color 0.2s;
                background: var(--bg-hover);
            }

            .upload-zone:hover { border-color: var(--primary); }

            .upload-controls {
                display: flex;
                gap: 1rem;
                justify-content: center;
                margin-top: 1rem;
                flex-wrap: wrap;
            }

            .form-select {
                padding: 0.5rem;
                border-radius: 6px;
                border: 1px solid var(--border);
                background: var(--bg-card);
                color: var(--text-main);
            }

            /* --- GALLERY GRID --- */
            .gallery-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                gap: 1.5rem;
            }

            .file-card {
                background: var(--bg-card);
                border: 1px solid var(--border);
                border-radius: 8px;
                overflow: hidden;
                position: relative;
                transition: transform 0.2s, box-shadow 0.2s;
            }

            .file-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            }

            .file-preview {
                height: 150px;
                width: 100%;
                background: #000;
                display: flex;
                align-items: center;
                justify-content: center;
                overflow: hidden;
            }

            .file-preview img, .file-preview video {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .file-info {
                padding: 0.75rem;
            }

            .file-name {
                font-size: 0.875rem;
                font-weight: 600;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                margin-bottom: 0.25rem;
            }

            .file-tag {
                font-size: 0.7rem;
                text-transform: uppercase;
                background: var(--bg-hover);
                padding: 2px 6px;
                border-radius: 4px;
                color: var(--text-muted);
            }

            .delete-overlay {
                position: absolute;
                top: 0.5rem;
                right: 0.5rem;
                opacity: 0;
                transition: opacity 0.2s;
            }

            .file-card:hover .delete-overlay { opacity: 1; }

            /* --- ORDERS LIST --- */
            .order-list { display: flex; flex-direction: column; gap: 1rem; }

            .order-item {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                align-items: center;
                padding: 1.25rem;
                border: 1px solid var(--border);
                border-radius: 8px;
                gap: 1rem;
            }

            .order-status {
                padding: 0.25rem 0.75rem;
                border-radius: 99px;
                font-size: 0.75rem;
                font-weight: 700;
                text-transform: uppercase;
            }
            
            .status-pending { background: #FEF3C7; color: #D97706; }
            .status-approved { background: #D1FAE5; color: #059669; }
            .status-rejected { background: #FEE2E2; color: #DC2626; }

            /* --- THEME TOGGLE --- */
            .theme-toggle {
                position: fixed;
                bottom: 2rem;
                right: 2rem;
                width: 3rem;
                height: 3rem;
                border-radius: 50%;
                background: var(--bg-card);
                border: 1px solid var(--border);
                box-shadow: var(--shadow);
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 100;
            }

            /* --- MODAL --- */
            .modal-backdrop {
                position: fixed;
                top: 0; left: 0; width: 100%; height: 100%;
                background: rgba(0,0,0,0.5);
                backdrop-filter: blur(4px);
                z-index: 2000;
                display: flex;
                align-items: center;
                justify-content: center;
                opacity: 0;
                pointer-events: none;
                transition: opacity 0.2s;
            }

            .modal-backdrop.show { opacity: 1; pointer-events: auto; }

            .modal-content {
                background: var(--bg-card);
                width: 90%;
                max-width: 600px;
                border-radius: var(--radius);
                padding: 2rem;
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
                max-height: 90vh;
                overflow-y: auto;
            }

            /* --- NOTIFICATION --- */
            .notification {
                position: fixed;
                top: 1rem;
                right: 1rem;
                padding: 1rem;
                border-radius: 8px;
                color: white;
                transform: translateY(-150%);
                transition: transform 0.3s;
                z-index: 3000;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            }
            .notif-success { background: #10B981; }
            .notif-error { background: #EF4444; }
            .notification.show { transform: translateY(0); }

            /* Mobile tweaks */
            @media (max-width: 768px) {
                .container { padding: 1rem; }
                .header { flex-direction: column; align-items: flex-start; }
                .upload-controls { flex-direction: column; width: 100%; }
                .upload-controls button, .upload-controls select { width: 100%; }
            }
        </style>
    </head>
    <body>

        <div class="container">
            <header class="header">
                <div class="header-content">
                    <h1>Admin Dashboard</h1>
                    <p style="color: var(--text-muted);">Welcome back, Nks.</p>
                </div>
                <div>
                    <a href="/" class="btn btn-outline">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 12l9-9 9 9M9 21V9h6v12"/></svg>
                        View Site
                    </a>
                </div>
            </header>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    </div>
                    <div class="stat-info">
                        <h3 id="pendingCount">0</h3>
                        <p>Pending Orders</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>
                    </div>
                    <div class="stat-info">
                        <h3 id="totalOrders">0</h3>
                        <p>Total Orders</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
                    </div>
                    <div class="stat-info">
                        <h3 id="portfolioItems">0</h3>
                        <p>Active Assets</p>
                    </div>
                </div>
            </div>

            <section class="section">
                <div class="section-header">
                    <h2>Order Requests</h2>
                    <button class="btn btn-outline" id="refreshOrders">Refresh</button>
                </div>
                <div class="order-list" id="ordersList">
                    <div class="empty-state" style="text-align:center; color:var(--text-muted); padding:2rem;">Loading orders...</div>
                </div>
            </section>

            <section class="section">
                <div class="section-header">
                    <h2>Asset Manager</h2>
                </div>

                <div class="upload-zone">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="var(--primary)" stroke-width="2" style="margin-bottom:1rem"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
                    <p style="font-weight:600">Drag files here or click below</p>
                    <p style="font-size:0.875rem; color:var(--text-muted)">Supports: Images, Videos (including MKV, MP4, AVI, MOV, etc.)</p>
                    
                    <div class="upload-controls">
                        <select id="bucketSelect" class="form-select">
                            <option value="animation">Animation</option>
                            <option value="artwork">Artwork</option>
                            <option value="video_editing">Video Editing</option>
                        </select>
                        <input type="file" id="fileInput" multiple accept="image/*,video/*,.mkv,.avi,.mov,.wmv,.flv,.webm" style="display:none">
                        <button class="btn btn-primary" onclick="document.getElementById('fileInput').click()">Select Files</button>
                        <button class="btn btn-success" id="uploadBtn">Start Upload</button>
                    </div>
                </div>

                <div class="gallery-grid" id="filesGrid">
                    </div>
            </section>
        </div>

        <button class="theme-toggle" id="themeToggle" title="Toggle Theme">
            <svg class="sun" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
        </button>

        <div class="modal-backdrop" id="previewModal">
            <div class="modal-content">
                <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:1rem">
                    <h3 id="modalTitle">Order Details</h3>
                    <button class="btn btn-outline" style="padding:0.25rem 0.5rem;" onclick="closeModal()">√ó</button>
                </div>
                <div id="modalBody"></div>
            </div>
        </div>

        <div id="notificationToast" class="notification">Message</div>

        <script is:inline>
            // GLOBAL CONFIG
            window.SUPABASE_URL = 'https://avmiweumvpveykxtamfm.supabase.co';

            document.addEventListener('DOMContentLoaded', () => {
                // --- THEME LOGIC ---
                const themeToggle = document.getElementById('themeToggle');
                const html = document.documentElement;
                const savedTheme = localStorage.getItem('theme') || 'light';
                html.setAttribute('data-theme', savedTheme);

                themeToggle.addEventListener('click', () => {
                    const current = html.getAttribute('data-theme');
                    const next = current === 'dark' ? 'light' : 'dark';
                    html.setAttribute('data-theme', next);
                    localStorage.setItem('theme', next);
                });

                // --- DATA LOADING ---
                loadPortfolio();
                loadOrders();
                loadStats();

                // --- UPLOAD LOGIC ---
                const uploadBtn = document.getElementById('uploadBtn');
                const fileInput = document.getElementById('fileInput');
                
                uploadBtn.addEventListener('click', async () => {
                    const files = fileInput.files;
                    const bucket = document.getElementById('bucketSelect').value;

                    if (!files.length) return showNotif('Please select files first', 'error');

                    uploadBtn.disabled = true;
                    uploadBtn.textContent = 'Uploading...';

                    try {
                        for (let file of files) {
                            const formData = new FormData();
                            formData.append('files', file);
                            formData.append('bucket', bucket);

                            // Assuming you have an API route set up at /api/uploads
                            const res = await fetch('/api/uploads', { method: 'POST', body: formData });
                            if (!res.ok) throw new Error('Upload failed');
                        }
                        showNotif('Upload successful!', 'success');
                        fileInput.value = '';
                        loadPortfolio(); // Refresh grid
                    } catch (e) {
                        console.error(e);
                        showNotif('Upload failed', 'error');
                    } finally {
                        uploadBtn.disabled = false;
                        uploadBtn.textContent = 'Start Upload';
                    }
                });

                // --- REFRESH BUTTON ---
                document.getElementById('refreshOrders').addEventListener('click', loadOrders);
            });

            // --- HELPER FUNCTIONS ---

            async function loadPortfolio() {
                const grid = document.getElementById('filesGrid');
                try {
                    const res = await fetch('/api/uploads');
                    const files = await res.json();
                    
                    if (!files || !files.length) {
                        grid.innerHTML = '<p style="grid-column:1/-1; text-align:center; padding:2rem; color:var(--text-muted)">No assets uploaded yet.</p>';
                        return;
                    }

                    grid.innerHTML = files.map(file => {
                        const url = `${window.SUPABASE_URL}/storage/v1/object/public/${file.bucket}/${encodeURIComponent(file.path)}`;
                        const isImg = file.mime?.startsWith('image');
                        const isVid = file.mime?.startsWith('video');

                        let preview = `<div style="display:flex;align-items:center;justify-content:center;height:100%;color:var(--text-muted)">FILE</div>`;
                        if(isImg) preview = `<img src="${url}" loading="lazy" alt="${file.filename}">`;
                        if(isVid) preview = `<video src="${url}"></video>`;

                        return `
                        <div class="file-card">
                            <div class="file-preview">${preview}</div>
                            <div class="file-info">
                                <div class="file-name" title="${file.filename}">${file.filename}</div>
                                <span class="file-tag">${file.bucket}</span>
                            </div>
                            <button class="btn btn-danger delete-overlay" style="padding:4px 8px; font-size:12px" onclick="deleteAsset('${file.id}', '${file.filename}')">üóë</button>
                        </div>
                        `;
                    }).join('');
                    
                    // Update Portfolio Count
                    document.getElementById('portfolioItems').innerText = files.length;
                    
                } catch (e) {
                    console.error('Portfolio Error', e);
                }
            }

            async function loadOrders() {
                const list = document.getElementById('ordersList');
                try {
                    const res = await fetch('/api/admin/orders');
                    const orders = await res.json();

                    if(!orders || !orders.length) {
                        list.innerHTML = '<p style="text-align:center; padding:2rem; color:var(--text-muted)">No orders found.</p>';
                        return;
                    }

                    list.innerHTML = orders.map(order => `
                        <div class="order-item">
                            <div style="flex:1">
                                <div style="font-weight:700; font-size:1.1rem">${order.service_title || 'Service Request'}</div>
                                <p style="color:var(--text-muted); font-size:0.9rem">${order.description || 'No description provided.'}</p>
                            </div>
                            <div style="display:flex;align-items:center;gap:1rem">
                                <span class="order-status status-${order.status}">${order.status}</span>
                                <div style="display:flex;gap:0.5rem">
                                    <button class="btn btn-success" style="padding:0.25rem 0.5rem" onclick="updateOrder('${order.id}', 'approve')">‚úì</button>
                                    <button class="btn btn-danger" style="padding:0.25rem 0.5rem" onclick="updateOrder('${order.id}', 'reject')">‚úó</button>
                                    <button class="btn btn-outline" style="padding:0.25rem 0.5rem" onclick='viewOrder(${JSON.stringify(order)})'>üëÅ</button>
                                </div>
                            </div>
                        </div>
                    `).join('');

                    updateStats(orders);

                } catch (e) {
                    console.error('Order Error', e);
                }
            }

            async function deleteAsset(id, name) {
                if(!confirm(`Delete ${name}?`)) return;
                try {
                    await fetch(`/api/uploads/${id}`, { method: 'DELETE' });
                    showNotif('Asset deleted', 'success');
                    loadPortfolio();
                } catch(e) { showNotif('Delete failed', 'error'); }
            }

            async function updateOrder(id, action) {
                try {
                    await fetch(`/api/admin/orders/${id}/${action}`, { method: 'POST' });
                    showNotif(`Order ${action}d`, 'success');
                    loadOrders();
                } catch(e) { showNotif('Action failed', 'error'); }
            }

            function viewOrder(order) {
                const modal = document.getElementById('previewModal');
                const body = document.getElementById('modalBody');
                document.getElementById('modalTitle').innerText = `Order #${order.id}`;
                
                body.innerHTML = `
                    <div style="display:grid; gap:1rem">
                        <div><strong>Client:</strong> ${order.client_email || 'Unknown'}</div>
                        <div><strong>Status:</strong> ${order.status}</div>
                        <div><strong>Description:</strong><br>${order.description}</div>
                        <div><strong>Budget:</strong> ${order.budget ? '$'+order.budget : 'N/A'}</div>
                    </div>
                `;
                
                modal.classList.add('show');
            }

            function closeModal() {
                document.getElementById('previewModal').classList.remove('show');
            }

            function showNotif(msg, type) {
                const el = document.getElementById('notificationToast');
                el.innerText = msg;
                el.className = `notification notif-${type} show`;
                setTimeout(() => el.classList.remove('show'), 3000);
            }

            function updateStats(orders) {
                if(!orders) return;
                document.getElementById('totalOrders').innerText = orders.length;
                document.getElementById('pendingCount').innerText = orders.filter(o => o.status === 'pending').length;
            }

            function loadStats() {
                // Wrapper to handle initial load
                // In a real app, you might have a dedicated /api/stats endpoint
            }
        </script>
    </body>
</html>